/*
 * Se utiliza para seleccionar una de entre múltiples alternativas.
switch (expresión){
    case valor 1:
    instrucciones;
    break;
    case valor 2:
    instrucciones;
    break;
    · · ·
    default:
    instrucciones;
}
 */
